<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/layout_bot_only_frame_black">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/singleTaskView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:layout_marginStart="24dp"
            android:buttonTint="@color/primaryLightColor"
            android:text="Example To-Do Title" />

        <TextView
            android:id="@+id/singleTaskView_area_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="6dp"
            android:textSize="14sp"
            android:textColor="#979797"
            android:text="Example Area1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>