<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/OverviewFragment">
    <fragment
        android:id="@+id/OverviewFragment"
        android:name="com.example.glance.OverviewFragment"
        tools:layout="@layout/overview_screen">
        <action
            android:id="@+id/action_OverviewFragment_to_EditScreenFragment"
            app:destination="@id/EditScreenFragment" />
        <action
            android:id="@+id/action_OverviewFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />
    </fragment>
    <fragment
        android:id="@+id/EditScreenFragment"
        tools:layout="@layout/edit_screen">
    </fragment>
    <fragment
        android:id="@+id/taskListFragment"
        tools:layout="@layout/tasklist_view">
        <action
            android:id="@+id/action_taskListFragment_to_EditScreenFragment"
            app:destination="@id/EditScreenFragment" />
    </fragment>
</navigation>